body
	margin 0
.header
	justify-content space-between
	display flex
	height 70px
	background black
	top 0
	padding 5px 15px 5px 15px
	
.logo
	height 100%
#searchBar
	border-radius 5px 0 0 5px
.searchBtn
	border-radius 0 5px 5px 0
	border none
	
.buttons
	margin-top 20px
	margin-right 4px
	align-self center
	display flex

#userName
	margin-left 20px
	
#userProfile
	padding-right 10px
	display flex
	justify-content flex-end
	align-items center
	height 30px
	border none
	border-radius 5px
	background #FFA800
	cursor pointer
	color white
	margin-left 10px
.avatar
	height 92%
	border 1px solid #FFA800
	border-radius 5px
	
#appsBtn
	padding 3px;
	border none
	height 30px
	width 30px
	border-radius 5px
	background #FFA800
	cursor pointer
	margin-left 10px
	
.appsLogo
	width 100%
	
#notificationBtn
	padding 3px;
	border none
	height 30px
	width 30px
	border-radius 5px
	background #FFA800
	cursor pointer
	margin-left 10px

#notificationBlock
	z-index 1
	background #FFA800
	max-height 800px
	// overflow overlay
	width 300px
	border-radius 20px
	right 0
	position absolute
	transition 0.2s
	&:before
		width 0 
		height 0 
		border-left 20px solid transparent
		border-right 20px solid transparent
		border-bottom 20px solid #FFA800
		content ''
		margin-top -20px
		margin-left 245px
		position absolute
#appsList
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	align-items baseline
	align-content space-around
#appsBlock
	z-index 1
	background #FFA800
	min-height 300px
	width 265px
	border-radius 20px
	right 0
	position absolute
	transition 0.2s	
	&:before
		width 0 
		height 0 
		border-left 20px solid transparent
		border-right 20px solid transparent
		border-bottom 20px solid #FFA800
		content ''
		margin-top -20px
		margin-left 170px
		position absolute
.invisible
	opacity 0
	display none
button
	cursor pointer
	transition all .1s linear
	&:active
		transform translateY(3px)
		
#notificationList
	padding-left 5px
		
.liNotification
	list-style-type none
	background white
	list-style-type none
	border-radius 10px
	margin-left 5px
	margin-right 5px
	padding 5px
	margin-bottom 10px
	-webkit-box-shadow 0px 0px 10px 4px rgba(255,255,255,0.98)
	-moz-box-shadow 0px 0px 10px 4px rgba(255,255,255,0.98)
	box-shadow 0px 0px 10px 4px rgba(255,255,255,0.98)
	
.notification
	display flex
	margin-top 10px
.imgApp
	align-self center


.appButton
	border-radius 7px
	background #fff
	border none
.serviceItem
	margin 10px
	width 24%
	order 0
	flex-grow 0
	flex-shrink 1
	flex-basis auto
	align-self auto
.appName
	text-align center
		
#searchBar
	height: 25px

#searc

.searchItem
	background-color white
	border-radius 3px
	margin-top 3px
	width: 173px
	background-color #fff
	text-align center
	height 30px
	border 1px solid black
	display: flex;
	align-items: center;
	justify-content: center
	&:hover
		background-color #FFA800

.textBlockNotification
	display flex
	flex-direction column
	flex-grow 1
	align-items flex-end
.titleNotification
	width 100%
	margin-bottom 3px
	margin-top 3px
	
.textNotification
	display block
	display -webkit-box
	max-height 55.2px
	overflow hidden
	text-overflow ellipsis	
	-webkit-line-clamp 3
	-webkit-box-orient vertical
	

@media only screen and (max-width: 640px)
	#userProfile
		padding-right 0px
	#userName
		display none

@media only screen and (max-width: 500px)
	.header
		margin-top 40px
	#userProfile
		padding-right 0px
	#userName
		display none
	.searchBar
		padding-left 10px
		margin-top -65px
		height 36px
		left 0
		position fixed
		width 100%
		border 2px solid #dadada
		&:focus
			outline none
			border-color #9ecaed
			box-shadow 0 0 10px #9ecaed
	.searchBtn
		margin-top -64px
		padding-left 25px
		padding-right 25px
		height 38px
		right 0
		position fixed
	.logo
		width 155px


#thumbnailApp
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between
	align-items center
	align-content stretch
	text-align center
	margin-left -10px
	margin-right -15px
	color #383838
	color rgba(56, 56, 56, 0.74)
	font-weight bold
#searchblockAdminApp
	margin-top: 25px;
	margin-bottom: 25px;
	
.notifButton
	margin-left 10px
	margin-right 10px
	padding 3px
	height 20px
	border 1px solid grey
	border-radius 6px
	text-align center
	margin-bottom 3px
	transition 0.2s	
	&:hover
		background white
		font-size 20px	
		
.noTextDecoration
	color black
	text-decoration none
	&:hover
		color black
		text-decoration none
	&:active
		color black
		text-decoration none
	&:visited
		color black
		text-decoration none
