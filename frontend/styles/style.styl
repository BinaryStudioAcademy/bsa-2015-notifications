body
	margin 0
.header
	justify-content space-between
	display flex
	height 70px
	background black
	top 0
	padding 5px 15px 5px 15px
	
.logo
	height 100%
.searchBar
	border-radius 5px 0 0 5px
.searchBtn
	border-radius 0 5px 5px 0
	border none
	
.buttons
	margin-right 4px
	align-self center
	display flex

#userName
	margin-left 20px
	
#userProfile
	padding-right 10px
	display flex
	justify-content flex-end
	align-items center
	height 30px
	border none
	border-radius 5px
	background #FFA800
	cursor pointer
	color white
	margin-left 10px
.avatar
	height 95%
	border 1px solid #FFA800
	border-radius 5px
	
#appsBtn
	padding 3px;
	border none
	height 30px
	width 30px
	border-radius 5px
	background #FFA800
	cursor pointer
	margin-left 10px
	
.appsLogo
	width 100%
	
#notificationBtn
	padding 3px;
	border none
	height 30px
	width 30px
	border-radius 5px
	background #FFA800
	cursor pointer
	margin-left 10px

#notificationBlock
	background #FFA800
	max-height 800px
	overflow overlay
	width 300px
	border-radius 20px
	right 0
	position absolute
	transition 0.2s
	&:before
		width 0 
		height 0 
		border-left 20px solid transparent
		border-right 20px solid transparent
		border-bottom 20px solid #FFA800
		content ''
		margin-top -20px
		margin-left 245px
		position absolute
		
#appsBlock
	background #FFA800
	min-height 300px
	width 265px
	border-radius 20px
	right 0
	position absolute
	transition 0.2s
	&:before
		width 0 
		height 0 
		border-left 20px solid transparent
		border-right 20px solid transparent
		border-bottom 20px solid #FFA800
		content ''
		margin-top -20px
		margin-left 170px
		position absolute
.invisible
	opacity 0
	display none
button
	cursor pointer
	transition all .1s linear
	&:active
		transform translateY(3px)
		
#notificationList
	padding-left 5px
		
.liNotification
	list-style-type none;
	
.notification
	display flex
	margin-top 10px
.imgApp
	align-self center

.textBlockNotification
	flex-grow 1

.titleNotification
	margin-bottom 3px
	margin-top 3px
	
.textNotification
	display: block
	display -webkit-box
	max-height 55.2px
	overflow hidden
	text-overflow ellipsis	
	-webkit-line-clamp 3
	-webkit-box-orient vertical


