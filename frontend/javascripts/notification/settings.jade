.col-md-6.col-md-offset-3.services-settings-wrapper
	.panel.panel-default(ng-repeat="service in settingsCtrl.services")
		.panel-body.services-settings
			img.img-responsive.col-xs-3.col-sm-3.col-md-2(ng-src="{{service.logo}}")
			.col-xs-9.col-sm-9.col-md-10
				h4 {{service.name}}
				input(type="checkbox" ng-model="service.setting.toInform" ng-click="settingsCtrl.changeSetting(service)") 
				span To inform
				br
				input(type="checkbox" ng-model="service.setting.sound" ng-click="settingsCtrl.changeSetting(service)") 
				span Sound